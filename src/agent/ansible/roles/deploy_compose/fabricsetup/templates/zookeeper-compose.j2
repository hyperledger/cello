---
version: '2'

services:

{% for zookeeper in zookeepers %}
  {{ zookeeper }}:
    container_name: {{ zookeeper }}
    image: hyperledger/fabric-zookeeper:{{ (fabric.helper_tag == "") | ternary(thetag, helpertag) }}
    network_mode: bridge
    hostname: {{ zookeeper }}
    restart: always
    environment:
      - ZOO_MY_ID={{ zoo_ids[zookeeper] }}
      - ZOO_SERVERS={{ znodes | trim }}
      - ZOO_TICK_TIME=2000
      - ZOO_INIT_LIMIT=10
      - ZOO_SYNC_LIMIT=2
{% endfor %}
